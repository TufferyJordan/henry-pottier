<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="8dp"
    tools:layout_width="150dp" >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/book_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cover_image_description"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@color/colorPrimary"
            tools:layout_height="200dp" />

        <ProgressBar
            android:id="@+id/book_image_loading"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/book_image"
            app:layout_constraintRight_toRightOf="@+id/book_image"
            app:layout_constraintTop_toTopOf="@+id/book_image"
            app:layout_constraintBottom_toBottomOf="@+id/book_image"
            android:padding="@dimen/big_gap" />

        <TextView
            android:id="@+id/book_title"
            style="@style/TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/little_gap"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/book_image"
            app:layout_constraintLeft_toLeftOf="@+id/book_image"
            app:layout_constraintRight_toRightOf="@+id/book_image"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Title" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>